{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "outDir": "./dist/c",
        "sourceMap": false,
        "declaration": true,
        "downlevelIteration": true,
        "experimentalDecorators": true,
        "moduleResolution": "node",
        "skipLibCheck": true,
        "target": "es2015",
        "module": "es2020",
        "emitDeclarationOnly": false,
        "declarationDir": "declarations",
        "paths": {
            "@bitbybit-dev/occt": [
                "../../../bitbybit-occt"
            ],
            "@bitbybit-dev/occt/*": [
                "../../../bitbybit-occt/*"
            ]
        },
        "lib": [
            "es2020",
            "dom"
        ]
    },
    "typedocOptions": {
        "exclude": [
            "**/*.test.ts*",
            "**/*.test.tsx*",
            "/declarations",
            "api.module",
            "bitbybit.ts",
            "context.ts",
            "declarations.ts",
            "declarationsBase.ts",
            "declarationsInputs.ts",
            "declarationsOCCTWorker.ts",
            "duplication.service.ts",
            "duplication.service.ts",
            "geometry-helper.ts"
        ]
    }
}